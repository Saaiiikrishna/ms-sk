# MySillyDreams Microservices Environment Configuration
# PRODUCTION SECRETS - DO NOT COMMIT TO VERSION CONTROL
# Add this file to .gitignore

# =============================================================================
# DATABASE CREDENTIALS
# =============================================================================
# Auth Service Database
AUTH_DB_USERNAME=authuser
AUTH_DB_PASSWORD=authpass123
AUTH_DB_URL=jdbc:postgresql://postgres-auth:5432/authdb

# User Service Database  
USER_DB_USERNAME=useruser
USER_DB_PASSWORD=userpass123
USER_DB_URL=jdbc:postgresql://postgres-user:5432/userdb

# =============================================================================
# SECURITY SECRETS
# =============================================================================
# JWT Configuration
JWT_SECRET=mySecretKey123456789012345678901234567890123456789012345678901234567890
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# Application Encryption Keys
APP_ENCRYPTION_KEY=ProductionEncryptionKey123456789012345678901234567890!
INTERNAL_API_KEY=ProductionInternalApiKey123456789012345678901234567890!

# =============================================================================
# EXTERNAL SERVICE CREDENTIALS
# =============================================================================
# Keycloak Admin Credentials
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=SecureKeycloakPassword123!
KEYCLOAK_AUTH_SERVER_URL=http://keycloak:8080
KEYCLOAK_REALM=MySillyDreams-Realm

# Vault Configuration
VAULT_URI=http://vault:8200
VAULT_TOKEN=root-token

# Zookeeper Admin Credentials
ZOOKEEPER_ADMIN_USERNAME=admin
ZOOKEEPER_ADMIN_PASSWORD=SecureZookeeperPassword123!

# =============================================================================
# SERVICE ENDPOINTS
# =============================================================================
# Zipkin Tracing
ZIPKIN_ENDPOINT=http://zipkin:9411/api/v2/spans

# Eureka Service Discovery
EUREKA_SERVER_URL=http://eureka-server:8761/eureka/

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Spring Profiles
SPRING_PROFILES_ACTIVE=local
ENVIRONMENT=dev

# Zookeeper Connection
ZOOKEEPER_CONNECT=zookeeper:2181
ZOOKEEPER_CONNECTION_STRING=zookeeper:2181

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# MFA Configuration
MFA_ISSUER=MySillyDreamsPlatform

# Logging Levels
ROOT_LOG_LEVEL=INFO
LOG_LEVEL_AUTH=INFO
LOG_LEVEL_USER=INFO
LOG_LEVEL_GATEWAY=INFO
LOG_LEVEL_ZOOKEEPER=INFO

# =============================================================================
# KUBERNETES SPECIFIC (for production deployment)
# =============================================================================
# Kubernetes Service Names (when deployed in k8s)
AUTH_DB_URL_K8S=jdbc:postgresql://postgres-auth.mysillydreams-dev:5432/authdb
USER_DB_URL_K8S=jdbc:postgresql://postgres-user.mysillydreams-dev:5432/userdb
ZIPKIN_ENDPOINT_K8S=http://zipkin.mysillydreams-dev:9411/api/v2/spans
EUREKA_SERVER_URL_K8S=http://eureka-server.mysillydreams-dev:8761/eureka/
KEYCLOAK_AUTH_SERVER_URL_K8S=http://keycloak.mysillydreams-dev:8080
VAULT_URI_K8S=http://vault.mysillydreams-dev:8200
REDIS_HOST_K8S=redis.mysillydreams-dev
